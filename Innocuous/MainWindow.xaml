<Window x:Class="Innocuous.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Innocuous"
        mc:Ignorable="d"
        Title="Innocuous" Height="250" Width="500">
    <Grid Background="#FF00FF80">
        <Button Content="Start"
        x:Name="startButton"
		HorizontalAlignment="Left"
		Margin="10,10,0,0"
		VerticalAlignment="Top"
		Width="75"
		Click="startButton_Click"  Background="#FF3CE422"/>
        
        <Button Content="Stop"
        x:Name="stopButton"
		HorizontalAlignment="Right"
		Margin="0,10,10,0"
		VerticalAlignment="Top"
		Width="75"
		Click="stopButton_Click" Background="#FF3CE422"/>
    </Grid>
</Window>
